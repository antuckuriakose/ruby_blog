<div>
  <%= form_for @article do |f| %>

    <% if @article.errors.any? %>
      <%= render 'common/error', errors: @article.errors %>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title , :class=>'form-control'%>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.cktext_area :text,
        ckeditor: { uiColor: '#fffFFF',
                    extraPlugins: 'bootstrapVisibility,dialog,image2,clipboard,imageresponsive,lineutils', 
                    toolbar: 'mini' } %>

    </p>

    <p>
      <%= f.submit :class=>'btn btn-primary'%>
    </p>

  <% end %>
</div>
