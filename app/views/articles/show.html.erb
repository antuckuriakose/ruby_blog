<div>
<!-- <div class="col-md-6" >  -->
  <div class="jumbotron center">
    <h1><%= @article.title %></h1>

      <p>
        <span style="color: grey">Posted On :<%= @article.created_at.strftime("%I:%M:%S %p %B %d, %Y") %> by <%= @article.user.name? ? @article.user.name : @article.user.email %></span>
      </p>
  </div>
  <div class="col-md-2" >
    <% if can? :update, @article %>
      <%= link_to 'Edit', edit_article_path(@article) %> |
    <% end %>
    <%= link_to 'Back', articles_path %>
  </div>
  <div class="col-md-9">
    <div class="col-md-12">
      <%= @article.text.html_safe %>
    </div>
    <div class="col-md-12" style="border-color:#c3ccdb; background-color: #c3ccdb; padding-bottom: 25px;">
      <% if @article.comments %>
        <h2>Comments</h2>
        <%= render @article.comments %>
      <% end %>
    </div>
    <% if can? :create, Comment %>
      <div class="col-md-12" style="border-color: aliceblue; background-color: #b7c8e5; padding-bottom: 15px; margin-bottom: 15px;">
        <h2>Add a comment:</h2>
        <%= render 'comments/form' %>
      </div>
    <% end %>
  </div>
</div>
